apiVersion: apps/v1
kind: Deployment
metadata:
  name: servian-app-db-migration
  labels:
    app: servian-app-db-migration
spec:
  replicas: 1
  selector:
    matchLabels:
      app: servian-app-db-migration
  template:
    metadata:
      labels:
        app: servian-app-db-migration
    spec:
      containers:
        - name: servian-app-db-migration
          image: servian/techchallengeapp:$IMAGE_VERSION
          ports:
            - containerPort: 3000
          command: ["./TechChallengeApp", "updatedb"]
          envFrom:
            - configMapRef:
                name: servian-app-config
            - secretRef:
                name: servian-app-secrets
          resources:
            requests:
              memory: "64Mi"
              cpu: "250m"
            limits:
              memory: "128Mi"
              cpu: "500m"
